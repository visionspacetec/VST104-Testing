/* MAIN FUNCTIONS */

void lsm6ds3_configure(I2C_HandleTypeDef *hand, int dev);

void lsm6ds3_readManufac(I2C_HandleTypeDef *hand, int dev);

void lsm6ds3_readAccData(I2C_HandleTypeDef *hand, int dev);

