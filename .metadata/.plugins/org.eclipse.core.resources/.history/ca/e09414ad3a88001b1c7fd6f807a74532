#ifndef _LSM6DS3_H_
#define _LSM6DS3_H_


/* INCLUDES */

#include <stdio.h>
#include <string.h>

#include "main.h"
#include "stm32l4xx_hal.h"

#include "testing_tools.h"


/* SUPPORT FUNCTIONS */

void lsm6ds3_powerReset(void);

